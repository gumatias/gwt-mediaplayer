<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:s="urn:import:com.kiouri.sliderbar.client.solution.adv">
             
    <g:HTMLPanel ui:field="container" styleName="video-container">
    	<div class="video-player-overlay">
    		<g:HorizontalPanel ui:field="overlayContainer"></g:HorizontalPanel>
    	</div>
    	<div class="video-player">
    		<g:HorizontalPanel ui:field="videoContainer"></g:HorizontalPanel>
    	</div>
    	<div class="video-player-controls">
    		<g:HorizontalPanel ui:field="controlContainer">
	    		<g:Button ui:field="playPauseButton">Play</g:Button>
	    		<s:BasicSliderBar ui:field="timelineSlider" />
	    		<g:Button ui:field="muteButton">Mute</g:Button>
	    		<s:AdvancedSliderBar ui:field="volumeSlider" />
	    		<g:Button ui:field="fullScreenButton">Full-Screen</g:Button>
    		</g:HorizontalPanel>
    	</div>
    </g:HTMLPanel>
</ui:UiBinder>